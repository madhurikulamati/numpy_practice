"""
NumPy Basics Practice

This script demonstrates basic NumPy array creation and operations:
- 1D & 2D arrays
- Zeros, ones, full arrays
- Identity matrix
- Shape and dtype
- Linspace and arange
- Reshape and indexing
- Random number generation.
"""


import numpy as np

# --------------------------------------------------
# 1. 1D and 2D arrays
# --------------------------------------------------
a = np.array([2, 4, 6, 8])
b = np.array([
    [1, 2, 3, 4],
    [5, 6, 7, 8]
])
print(a)
print(b)


# --------------------------------------------------
# 2. Zeros array
# --------------------------------------------------
print(np.zeros((3, 2)))
print(np.zeros((2, 2, 3)))


# --------------------------------------------------
# 3. Ones array
# --------------------------------------------------
print(np.ones((2, 3)))
print(np.ones((2, 2, 3)))


# --------------------------------------------------
# 4. Full array
# --------------------------------------------------
print(np.full((2, 3), 7))
print(np.full((3, 2, 2), 10))


# --------------------------------------------------
# 5. Identity matrix
# --------------------------------------------------
print(np.eye(3))
print(np.eye(4, 3))


# --------------------------------------------------
# 6. Shape and dtype
# --------------------------------------------------
x = np.zeros((4, 5))
print(x)
print(x.shape)
print(x.dtype)


# --------------------------------------------------
# 7. Linspace
# --------------------------------------------------
b = np.linspace(50, 100, 7)
print(b)


# --------------------------------------------------
# 8. Border ones
# --------------------------------------------------
a = np.zeros((5, 5))
a[0, :] = 1
a[-1, :] = 1
a[:, 0] = 1
a[:, -1] = 1
print(a)


# --------------------------------------------------
# 9. Arange and reshape
# --------------------------------------------------
b = np.arange(10, 50)
b = b.reshape(8, 5)
print(b)


# --------------------------------------------------
# 10. Even numbers
# --------------------------------------------------
c = np.arange(2, 42, 2)
print(c)


# --------------------------------------------------
# 11. Random marks matrix
# --------------------------------------------------
marks = np.random.randint(35, 101, (5, 4))
print(marks)
print(marks.shape)


# --------------------------------------------------
# 12. Constant matrix
# --------------------------------------------------
b = np.full((3, 3), 5)
print(b)
